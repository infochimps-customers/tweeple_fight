%head
  %meta{ :charset => "utf-8" }/
  -# Force latest IE rendering engine & Chrome Frame; Remove this if you use the .htaccess
  %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }/
  
  %title= [@title, Settings.app_name].compact.join(' - ')

  %meta{ :content => @page_description, :name => "description" }/
  %meta{ :content => "Infochimps", :name => "author" }/
  
  -# Mobile viewport optimized: j.mp/bplateviewport
  %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }/
  
  -# Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references
  %link{ :href => "/favicon.ico?d=1",          :rel => "shortcut icon" }/
  -# %link{ :href => "/apple-touch-icon.png", :rel => "apple-touch-icon" }/
  
  -# CSS : implied media="all"
  %link{ :href => "/stylesheets/style_cached.css", :rel => "stylesheet", :type => "text/css", :media => "all" }  

  -# Uncomment if you are specifically targeting less enabled mobile browsers
  -# %link{ :href => "/stylesheets/handheld.css", :rel => "stylesheet", :type => "text/css", :media => "handheld" }  

  -# All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects
  %script{ :src => "/javascripts/modernizr.min.js", :type => "text/javascript" }

